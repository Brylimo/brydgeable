extends base

block content
	div.upload__container
		div.upload__video 
			video#preview
			button#startBtn.social__btn Start Recording
	if errorMessage
		span=errorMessage
	form(method="POST", enctype="multipart/form-data")
		label(for="video") Video File
		input(name="video" type="file" accept="video/*" required id="video")
		label(for="thumb") Thumbnail File
		input(name="thumb" type="file" accept="image/*" required id="thumb")
		input(name="title" type="text" placeholder="title")
		input(name="description" type="text" placeholder="description")
		input(name="hashtags" type="text" placeholder="hashtag separated by comma")
		input(type="submit" value="Upload Video")

block scripts
	script(src="/static/js/recorder.js")